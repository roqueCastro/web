<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.web.fragment.RegistroFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Registrar usuario"
                />

            <!--  Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_marginTop="8dp">


                <EditText
                    android:id="@+id/input_documento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:hint="Documento"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <!-- Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/colorPrimaryDark"
                android:layout_marginTop="8dp">


                <EditText
                    android:id="@+id/input_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:hint="Nombre"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <!-- Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginTop="8dp">


                <EditText
                    android:id="@+id/input_profeccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:hint="ProfecciÃ³n"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btnAgregarImagen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:background="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_camera"
                    android:gravity="center"
                    android:text="   Agregar foto   " />

            </LinearLayout>

            <ImageView
                android:id="@+id/imagenRegistro"
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:src="@drawable/img_no_disponible"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_Guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:padding="12dp"
            android:text="Guardar" />


    </RelativeLayout>

</FrameLayout>
